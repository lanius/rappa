{
  "name": "Rappa",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension supports code reading method used by taichi",
  "browser_action": {
    "default_icon": "img/axe.png",
    "default_title": ""
  },
  "content_scripts": [
    {
      "matches": ["http://github.com/*", "https://github.com/*"],
      "css": ["content/css/styles.css"],
      "js": [
        "common/lodash.custom.min.js",
        "content/lib/jquery-1.8.2.min.js", "content/lib/jquery-observe.js", 
        "content/lib/handlebars.runtime-1.0.rc.1.min.js",
        "content/js/templates.js", "content/js/main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "common/lodash.custom.min.js",
      "background/lib/sha256.js", "background/lib/base64.js",
      "background/lib/github.js", "background/lib/purl.js",
      "background/js/util.js", "background/js/model.js", "background/js/bg.js"
    ]
  },
  "permissions": ["http://github.com/*", "https://github.com/*"]
}